<h1>New Secret</h1>

<form action="<%= secrets_url %>" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

	<label for="secret_title">Title</label>
	<input type="text" name="secret[title]" id="secret_title"><br>

	<label for="secret_recipient_id">Recipient</label>
	<input type="text" name="secret[recipient_id]" id="secret_recipient_id"><br>

	<p><input type="submit" value="Create"></p>
</form>